{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
   "baseUrl": ".",
    "paths": {
      "@component/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@apis/*": ["./apis/*"],
      "@utils/*": ["./utils/*"],
      "@context/*": ["./context/*"],
      "@services/*": ["./services/*"],
      "@widgets/*": ["./components/widgets/*"],
      "@providers/*": ["./providers/*"],
      "@app/*": ["./app/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
